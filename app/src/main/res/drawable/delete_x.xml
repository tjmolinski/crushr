<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#f00"/>
                <corners android:radius="100px" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="-45" android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#f00"/>
            </shape>
        </rotate>
    </item>
</layer-list>